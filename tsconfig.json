{
  "compilerOptions": {
    "target": "es5",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "removeComments": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"],
    "noEmit": true
  },
  "files": ["src/index.ts"],
  "include": ["node_modules/@types"],
  "exclude": ["node_modules/**", "src/lib.ts", "dist/**", "**/*.spec.ts"]
}
