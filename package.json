{
  "name": "styled-breakpoints",
  "version": "8.1.2",
  "description": "Simple and powerfull css breakpoints for styled-components",
  "scripts": {
    "size": "cross-env size-limit",
    "test:watch": "cross-env jest --watch",
    "test:code": "cross-env jest --coverage",
    "lint:file": "cross-env eslint --ext .ts --quiet --fix",
    "lint:all": "cross-env eslint --fix.",
    "commit": "cross-env git-cz",
    "coverage": "cross-env cat ./coverage/lcov.info | coveralls",
    "pretty": "cross-env prettier './**/**/**.{json,js,ts}' --write",
    "semantic-release": "cross-env semantic-release",
    "contributors:add": "cross-env all-contributors add",
    "contributors:generate": "cross-env all-contributors generate"
  },
  "license": "MIT",
  "homepage": "https://github.com/mg901/styled-breakpoints#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mg901/styled-breakpoints.git"
  },
  "bugs": {
    "url": "https://github.com/mg901/styled-breakpoints/issues"
  },
  "author": "Maxim Alyoshin <mgreen097@gmail.com> (https://github.com/mg901)",
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/env"
        ]
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "browser": true,
      "jest": true
    },
    "rules": {
      "newline-before-return": 2,
      "no-console": 2,
      "import/no-default-export": 2,
      "import/no-self-import": 2,
      "import/no-named-as-default": 2,
      "arrow-body-style": 2,
      "no-underscore-dangle": 0,
      "no-use-before-define": 0,
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": 0,
      "import/extensions": 0
    },
    "overrides": [
      {
        "files": [
          "*.config.js"
        ],
        "rules": {
          "import/no-default-export": 0,
          "global-require": 0
        }
      }
    ]
  },
  "eslintIgnore": [
    "sandbox/**",
    "**/*.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{j,t}s": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "size-limit": [
    {
      "name": "core",
      "import": {
        "index.js": "{ up, down, between, only }"
      },
      "limit": "1.15kb"
    },
    {
      "name": "core + react hook",
      "import": {
        "index.js": "{ up, down, between, only }",
        "react/index.js": "{ useBreakpoint }"
      },
      "limit": "1.33kb",
      "ignore": [
        "react",
        "styled-components"
      ]
    }
  ],
  "peerDependencies": {
    "react": "^17.0.0",
    "styled-components": "^5.2.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.1.1",
    "@semantic-release/npm": "^7.0.6",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@size-limit/preset-small-lib": "^4.6.0",
    "all-contributors-cli": "^6.17.4",
    "commitizen": "^4.2.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-test-renderer": "^16.14.0",
    "rimraf": "^3.0.2",
    "size-limit": "^4.6.0",
    "styled-components": "^5.2.0",
    "typescript": "^4.0.3"
  },
  "keywords": [
    "media",
    "styled",
    "react",
    "preact",
    "media",
    "emotion",
    "javascript",
    "css-in-js",
    "breakpoint",
    "media-query",
    "breakpoints",
    "css-in-react",
    "media-queries",
    "typescript",
    "styled-components",
    "styled-breakpoints"
  ]
}
